                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="23"/>
                                                    <RowDefinition Height="23"/>
                                                </Grid.RowDefinitions>
                                                <Image x:Name="imgreturnflight" Source="{Binding RImageFlightReturn}" VerticalOptions="Center" Grid.Row="0" HorizontalOptions="Center"/>
